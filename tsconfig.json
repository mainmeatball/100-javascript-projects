{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "strict": true,
        "alwaysStrict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "es2020",
            "dom"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "noEmitOnError": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
